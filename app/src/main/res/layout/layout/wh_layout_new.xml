<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_normal_gray"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:background="@drawable/olt"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        >
    </View>
    <Button
        android:id="@+id/pon_chaxun"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:drawableLeft="@drawable/pon"
        android:paddingLeft="@dimen/dp_10"
        android:gravity="center_vertical"
        android:drawablePadding="10dip"
        android:textColor="@color/black"
        android:text="PON口光猫新发现（济南用）"
        android:nextFocusLeft="@dimen/dp_10"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        >
    </View>
    <Button
        android:id="@+id/duankou"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:drawableLeft="@drawable/duankou"
        android:paddingLeft="@dimen/dp_10"
        android:gravity="center_vertical"
        android:drawablePadding="10dip"
        android:textColor="@color/black"
        android:text="端口满查询"
        android:nextFocusLeft="@dimen/dp_10"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        >
    </View>
    <Button
        android:id="@+id/feibiao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:drawableLeft="@drawable/telegram"
        android:paddingLeft="@dimen/dp_10"
        android:gravity="center_vertical"
        android:drawablePadding="10dip"
        android:textColor="@color/black"
        android:text="非标小区PON口覆盖范围查询"
        android:nextFocusLeft="@dimen/dp_10"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        >
    </View>
    <Button
        android:id="@+id/jqm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:drawableLeft="@drawable/jqm"
        android:paddingLeft="@dimen/dp_10"
        android:gravity="center_vertical"
        android:drawablePadding="10dip"
        android:textColor="@color/black"
        android:text="鉴权码查询"
        android:nextFocusLeft="@dimen/dp_10"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        >
    </View>
</LinearLayout>
