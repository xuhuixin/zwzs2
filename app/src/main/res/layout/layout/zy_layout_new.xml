<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_normal_gray"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:background="@drawable/tubiao"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        >
    </View>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:drawableLeft="@drawable/deluge1"
        android:paddingLeft="@dimen/dp_10"
        android:gravity="center_vertical"
        android:drawablePadding="10dip"
        android:textColor="@color/tv_gray_normal"
        android:text="房号资源核查（开发中）"
        android:nextFocusLeft="@dimen/dp_10"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        >
    </View>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:drawableLeft="@drawable/firefox1"
        android:paddingLeft="@dimen/dp_10"
        android:gravity="center_vertical"
        android:drawablePadding="10dip"
        android:textColor="@color/tv_gray_normal"
        android:text="设备资源核查（开发中）"
        android:nextFocusLeft="@dimen/dp_10"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        >
    </View>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:drawableLeft="@drawable/telegram"
        android:paddingLeft="@dimen/dp_10"
        android:gravity="center_vertical"
        android:drawablePadding="10dip"
        android:textColor="@color/tv_gray_normal"
        android:text="账号资源关联（开发中）"

        android:nextFocusLeft="@dimen/dp_10"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        >
    </View>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        android:layout_marginTop="10dp">
    </View>
    <Button
        android:id="@+id/guangwang"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/btn_white_selector"
        android:drawableLeft="@drawable/gparted"
        android:paddingLeft="@dimen/dp_10"
        android:gravity="center_vertical"
        android:drawablePadding="10dip"
        android:text="光网终端扫码"
        android:textColor="@color/black"
        android:nextFocusLeft="@dimen/dp_10"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        >
    </View>
</LinearLayout>
